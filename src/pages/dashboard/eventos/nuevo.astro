---
import Layout from '../../../layouts/Layout.astro';
import { supabaseUrl, supabaseAnonKey } from '../../../lib/supabaseClient';
import '../../../styles/global.css';

const title = 'Crear evento';
---

<Layout title={title}>
<h1 class="text-4xl font-bold mb-8">üÜï {title}</h1>

<form
  id="form-evento"
  class="bg-white p-6 rounded-2xl shadow-lg border space-y-4 max-w-xl"
  data-supabase-url={supabaseUrl}
  data-supabase-key={supabaseAnonKey}
>
  <div>
    <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre del evento</label>
    <input type="text" id="nombre" placeholder="Ej. Fiesta Blanca" class="w-full border p-3 rounded-lg" required />
  </div>

  <div>
    <label for="fecha" class="block text-sm font-medium text-gray-700 mb-1">Fecha</label>
    <input type="date" id="fecha" class="w-full border p-3 rounded-lg" required />
  </div>

  <div>
    <label for="tipo" class="block text-sm font-medium text-gray-700 mb-1">Tipo de evento (opcional)</label>
    <input type="text" id="tipo" placeholder="Ej. Techno, Reggaet√≥n..." class="w-full border p-3 rounded-lg" />
  </div>

  <div>
    <label for="comision" class="block text-sm font-medium text-gray-700 mb-1">Comisi√≥n (%)</label>
    <input type="number" id="comision" min="0" max="100" placeholder="Ej. 15" class="w-full border p-3 rounded-lg" required />
  </div>

  <button type="submit" class="w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition">
    Crear evento
  </button>

  <p id="mensaje" class="text-sm text-center mt-2 text-gray-600"></p>
</form>


  <script type="module">
    import { createClient } from 'https://esm.sh/@supabase/supabase-js';

    const form = document.getElementById('form-evento');
    const mensaje = document.getElementById('mensaje');
    const url = form.dataset.supabaseUrl;
    const key = form.dataset.supabaseKey;

    const supabase = createClient(url, key);

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const evento = {
        nombre: document.getElementById('nombre').value,
        fecha: document.getElementById('fecha').value,
        tipo: document.getElementById('tipo').value || null,
        porcentaje_comision: parseFloat(document.getElementById('comision').value)
      };

      const { error } = await supabase.from('eventos').insert(evento);

      if (error) {
        mensaje.textContent = '‚ùå Error al crear el evento';
        mensaje.className = 'text-red-600 text-center text-sm';
      } else {
        mensaje.textContent = '‚úÖ Evento creado correctamente';
        mensaje.className = 'text-green-600 text-center text-sm';
        form.reset();
      }
    });
  </script>
</Layout>
